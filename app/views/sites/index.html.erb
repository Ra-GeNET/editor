<h1>Listing sites</h1>

<table>
  <thead>
    <tr>
      <th>File path</th>
      <th>Title</th>
      <th>Automap</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.file_path %></td>
        <td><%= site.title %></td>
        <td><%= site.automap ? "Yes" : "No"  %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Refresh', refresh_site_url( site ) %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

